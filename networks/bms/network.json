            "receiving": ["MAINBOARD"],
            "description": "[LEGACY]: Cells' temperatures",
            "contents": {
                "cellboard_id": "Cellboard",
                "start_index": "uint8",
                "temp0": {
                    "type": "float32",
                    "range": [-20, 80],
                    "force": "uint8"
                },
                "temp1": {
                    "type": "float32",
                    "range": [-20, 80],
